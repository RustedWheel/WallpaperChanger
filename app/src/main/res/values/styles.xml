<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardStyle" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/card_bottom_margin</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
        <item name="contentPadding">@dimen/card_padding</item>
        <item name="cardElevation">4dp</item>
    </style>

</resources>
